<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/homePage.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <title>Home</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');
      .signUpHeading{
        font-family: 'Inter', sans-serif;
        font-size: 24px;
font-style: normal;
font-weight: 600;
      }
     ::placeholder{
      font-family: 'Inter', sans-serif;
font-size: 16px;
font-style: normal;
font-weight: 400;     }
    </style>
  </head>
  <body>
   
    <div class="mainSignupDiv">
      <img src="/images/pixel_mba_logo.png" class="logoImgSignup" alt="" />
      <div class="signUpBox">
        <%- include('../partials/flash') %>
        <form
          action="/usersignup"
          method="post"
          class="formSignup"
          onsubmit="return validateForm()"
        >
          <h3 class="signUpHeading">Sign Up with Your Email</h3>
          <input
            placeholder="email@gmail.com"
            class="input-field"
            type="email"
            name="email"
            id="email"
            required
          />
          <!-- Remove the password input field -->
          <input type="hidden" name="password" id="password" />

          <button type="submit" class="signUpButton" id="signupButton">
            Sign up
          </button>
        </form>
     
      </div>
    </div>
    <script>
      function validateForm() {
        var email = document.getElementById("email").value;
        if (email.trim() === "") {
          alert("Please fill in the email field.");
          return false;
        }
        return true;
      }
      // Change the button text
      document
        .getElementById("signupButton")
        .addEventListener("click", function () {
          this.textContent = "âœ“ Please check your email ";
          // Change the background color
          this.style.backgroundColor = "#53cc92";
          document.getElementById("signupForm").submit();
        });
    </script>
  </body>
</html>
